{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "lib": ["dom", "es2019"],
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        // "strictPropertyInitialization": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noErrorTruncation": true,
        "experimentalDecorators": true,
        "paths": {
            "*": [
                "*",
            ],
        },
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "declarations/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}
